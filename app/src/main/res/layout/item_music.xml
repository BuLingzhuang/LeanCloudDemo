<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <TextView
        android:id="@+id/item_music_musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌曲名：相思赋予谁"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/item_music_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="歌手：好妹妹乐队"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/item_music_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="时长：122s"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/item_music_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="类型：情歌"
        android:textSize="16sp"/>
    <View
        android:id="@+id/item_music_view"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>